<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/button_5"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:onClick="five"
            android:text="5"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/button_1"
            app:layout_constraintTop_toBottomOf="@+id/button_1" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:onClick="two"
            android:text="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/button_reset"
            app:layout_constraintTop_toBottomOf="@+id/button_reset" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            android:onClick="three"
            android:text="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/button_reset"
            app:layout_constraintTop_toBottomOf="@+id/button_reset" />

        <Button
            android:id="@+id/button_reset"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginTop="8dp"
            android:onClick="reset"
            android:text="RESET"
            app:layout_constraintStart_toStartOf="@+id/textView_number"
            app:layout_constraintTop_toBottomOf="@+id/textView_number" />

        <Button
            android:id="@+id/button_div "
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="204dp"
            android:layout_marginLeft="204dp"
            android:layout_marginTop="8dp"
            android:onClick="div"
            android:text="÷"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/textView_number"
            app:layout_constraintTop_toBottomOf="@+id/textView_number" />

        <Button
            android:id="@+id/button_persent"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="8dp"
            android:text="%"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/textView_number"
            app:layout_constraintTop_toBottomOf="@+id/textView_number" />

        <TextView
            android:id="@+id/textView_number"
            android:layout_width="270dp"
            android:layout_height="64dp"
            android:layout_marginTop="56dp"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_1OR0"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="8dp"
            android:text="+/-"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/textView_number"
            app:layout_constraintTop_toBottomOf="@+id/textView_number" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:onClick="one"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/button_reset"
            app:layout_constraintTop_toBottomOf="@+id/button_reset" />

        <Button
            android:id="@+id/button_X"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="204dp"
            android:layout_marginLeft="204dp"
            android:onClick="multiply"
            android:text="╳"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="@+id/button_reset"
            app:layout_constraintTop_toBottomOf="@+id/button_reset" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:onClick="four"
            android:text="4"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/button_1"
            app:layout_constraintTop_toBottomOf="@+id/button_1" />

        <Button
            android:id="@+id/button_subtract"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="204dp"
            android:layout_marginLeft="204dp"
            android:onClick="subtract"
            android:text="－"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="@+id/button_1"
            app:layout_constraintTop_toBottomOf="@+id/button_1" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            android:onClick="six"
            android:text="6"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/button_1"
            app:layout_constraintTop_toBottomOf="@+id/button_1" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:onClick="seven"
            android:text="7"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/button_4"
            app:layout_constraintTop_toBottomOf="@+id/button_4" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="204dp"
            android:layout_marginLeft="204dp"
            android:onClick="plus"
            android:text="＋"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="@+id/button_4"
            app:layout_constraintTop_toBottomOf="@+id/button_4" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            android:onClick="nine"
            android:text="9"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/button_4"
            app:layout_constraintTop_toBottomOf="@+id/button_4" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="68dp"
            android:layout_marginLeft="68dp"
            android:onClick="eight"
            android:text="8"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/button_4"
            app:layout_constraintTop_toBottomOf="@+id/button_4" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="136dp"
            android:layout_height="49dp"
            android:onClick="zero"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/button_7"
            app:layout_constraintTop_toBottomOf="@+id/button_7" />

        <Button
            android:id="@+id/button_."
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            android:text="."
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/button_7"
            app:layout_constraintTop_toBottomOf="@+id/button_7" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="68dp"
            android:layout_height="49dp"
            android:layout_marginStart="204dp"
            android:layout_marginLeft="204dp"
            android:onClick="equal"
            android:text="="
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="@+id/button_7"
            app:layout_constraintTop_toBottomOf="@+id/button_7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"/>

</androidx.constraintlayout.widget.ConstraintLayout>